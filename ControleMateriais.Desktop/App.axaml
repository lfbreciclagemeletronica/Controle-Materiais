<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ControleMateriais.Desktop.App"
             xmlns:local="using:ControleMateriais.Desktop"
             xmlns:conv="using:ControleMateriais.Desktop.Converters"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
        <!-- Caminho relativo, funciona dentro do mesmo assembly -->
        <ResourceInclude Source="Styles/Colors.axaml"/>
    </ResourceDictionary.MergedDictionaries>
        <SolidColorBrush x:Key="ToastOkBrush" Color="#2E7D32"/>
        <SolidColorBrush x:Key="ToastErrorBrush" Color="#C62828"/>
      </ResourceDictionary>
    </Application.Resources>
  

    <Application.Styles>

        <FluentTheme DensityStyle="Compact"/>

        <Style Selector=":is(Window)">
            <Setter Property="FontFamily" Value="avares://Avalonia.Fonts.Inter#Inter"/>
        </Style>

        <!-- Adding Datagrid -->
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>

        <!-- Botões e outros estilos -->
        <StyleInclude Source="avares://ControleMateriais.Desktop/Styles/Controls.axaml"/>

    </Application.Styles>
</Application>
