<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ControleMateriais.Desktop.Views.SplashWindow"
        Width="440" Height="540"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        Icon="avares://ControleMateriais.Desktop/Assets/avalonia-logo.ico">

    <!-- Rounded rectangle card -->
    <Border Background="#4CAF50"
            CornerRadius="32"
            Padding="32,40,32,40"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

        <Grid RowDefinitions="*,Auto,Auto,Auto,*">

            <!-- Logo (imagem real do LFB) -->
            <Image Grid.Row="1"
                   Source="avares://ControleMateriais.Desktop/Assets/lfb-logo.png"
                   Width="260" Height="260"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"/>

            <!-- Bem-vindo -->
            <TextBlock Grid.Row="2"
                       Text="Bem-vindo!"
                       FontFamily="avares://Avalonia.Fonts.Inter#Inter"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,12,0,4"/>

            <!-- Subtítulo -->
            <TextBlock Grid.Row="3"
                       Text="LFB Reciclagem Eletrônica"
                       FontFamily="avares://Avalonia.Fonts.Inter#Inter"
                       FontSize="15"
                       Foreground="White"
                       Opacity="0.88"
                       HorizontalAlignment="Center"/>

        </Grid>
    </Border>
</Window>
