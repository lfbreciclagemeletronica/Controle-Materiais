<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:compilerservices="using:System.Runtime.CompilerServices"
        xmlns:models="using:ControleMateriais.Models"
        xmlns:selection="using:Avalonia.Controls.Selection"
        xmlns:vm="using:ControleMateriais.Desktop.ViewModels"
        x:Class="ControleMateriais.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="800" Height="450"
        Title="Controle de Materiais">

  <Border Padding="16">
	  <Grid>
    <DataGrid ItemsSource="{Binding Itens}"
              AutoGenerateColumns="False"
              IsReadOnly="False">
      <DataGrid.Columns>

        <!-- Nome do material -->
        <DataGridTextColumn Header="Material"
                            x:DataType="models:MaterialItem"
                            Binding="{Binding Nome}"
                            IsReadOnly="True"
                            Width="2*"/>

        <!-- Peso atual (kg) - editável -->
        <DataGridTextColumn Header="Peso atual (kg)"
                            x:DataType="models:MaterialItem"
                            Binding="{Binding PesoAtual}" 
                            Width="*"/>

        <!-- Preço por Kg (R$) - somente leitura -->
        <DataGridTextColumn Header="Preço por kg"
                            x:DataType="models:MaterialItem"
                            IsReadOnly="True"
                            Binding="{Binding PrecoPorKg, Mode=OneWay, StringFormat={}{0:C}}"
                            Width="*"/>

        <!-- Total (R$) = PesoAtual * PrecoPorKg - somente leitura -->
        <DataGridTextColumn Header="Total"
                            IsReadOnly="True"
                            x:DataType="models:MaterialItem"
                            Binding="{Binding Total, Mode=OneWay, StringFormat={}{0:C}}"
                            Width="*"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
  </Border>
  
</Window>
